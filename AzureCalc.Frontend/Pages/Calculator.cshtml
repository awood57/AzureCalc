@page
@model CalculatorModel

<h2>Basic Math Functions</h2>

<form method="post">
	<input type="number" name="num1" placeholder="First number" step="any" />
	<select name="operation">
        <option value="add">+</option>
        <option value="sub">-</option>
        <option value="mul">ร</option>
        <option value="div">รท</option>
    </select>
    <input type="number" name="num2" placeholder="Second number" step="any" />
    <button type="submit">=</button>
</form>

@if (Model.Result != null)
{
	<h3>Result: @Model.Result</h3>
}
